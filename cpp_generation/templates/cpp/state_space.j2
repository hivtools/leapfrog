} // namespace internal

template<internal::MV ModelVariant>
internal::SSMap get_ss() {
    using SS = internal::SSMixed<ModelVariant>;
    internal::SSMap map;
    internal::SSCollector collector{map};
    SS::collect_ss(collector);
    return map;
}

} // namespace leapfrog
